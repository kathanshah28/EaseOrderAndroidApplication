<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync your table"
                android:textAlignment="center"
                android:layout_gravity="center_horizontal"
                android:textStyle="bold"
                android:background="#FBC02D"
                android:textSize="30dp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Restaurant_NameText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant_Name : "
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/Restaurant_NameEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Restaurant_name"
                    android:ems="30"
                    android:textAlignment="center"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/Table_NoText"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Restaurant_Name : "
                    android:textSize="20dp"
                    android:layout_margin="10dp"/>

                <EditText
                    android:id="@+id/Table_NoEdit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="Restaurant_name"
                    android:ems="30"
                    android:textAlignment="center"/>

            </LinearLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/LoginBtn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="Login"
                android:background="@drawable/buttonstyle"
                android:layout_margin="10dp"/>

</LinearLayout>